@page
@model IndexModel
@{ ViewData["Title"] = "Home"; }

<style>
    .hero {
        text-align: center;
        padding: 1.5rem 0 2rem;
    }

    .hero h1 {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--text);
        margin-bottom: 0.5rem;
    }

    .hero p {
        font-size: 1.1rem;
        color: var(--text-light);
        margin-bottom: 2rem;
    }

    .action-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-top: 1rem;
    }

    .action-card {
        background: var(--card-bg);
        border: 2px solid var(--border);
        border-radius: 1rem;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .action-card:hover {
        border-color: var(--primary);
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(37, 99, 235, 0.1);
    }

    .action-card-icon {
        width: 50px;
        height: 50px;
        background: var(--bg);
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.75rem;
    }

    .action-card h3 {
        font-size: 1.15rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .action-card p {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 0;
    }

    .step-number {
        width: 35px;
        height: 35px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
    }

    @@media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .hero p {
            font-size: 1rem;
        }

        .action-cards {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .action-card {
            padding: 1.5rem;
        }

        .action-card-icon {
            width: 50px;
            height: 50px;
            font-size: 1.75rem;
        }
    }
</style>

<div class="hero">
    <h1>Welcome to SPC System</h1>
    <p>Your pharmacy ordering platform</p>
</div>

<div class="action-cards">
    <a href="/Pharmacies/Create" class="action-card">
        <div class="step-number">1</div>
        <div class="action-card-icon">🏥</div>
        <h3>Register Pharmacy</h3>
        <p>Create your pharmacy account to start ordering</p>
    </a>

    <a href="/Drugs/Index" class="action-card">
        <div class="step-number">2</div>
        <div class="action-card-icon">💊</div>
        <h3>Browse Drugs</h3>
        <p>Search and explore available medications</p>
    </a>

    <a href="/Cart/Index" class="action-card">
        <div class="step-number">3</div>
        <div class="action-card-icon">🛒</div>
        <h3>View Cart</h3>
        <p>Review and place your orders</p>
    </a>
</div>