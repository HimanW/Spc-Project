@page
@model Spc.Client.Pages.Orders.DetailsModel
@{ ViewData["Title"] = "Order Details"; }

<style>
    .order-header {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin-bottom: 1.25rem;
    }

    .order-header h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .order-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.25rem;
        margin-top: 1.25rem;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
    }

    .meta-label {
        font-size: 0.75rem;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.4rem;
    }

    .meta-value {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text);
    }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
    }

    .status-placed {
        background: #dbeafe;
        color: #1e40af;
    }

    .status-approved {
        background: #d1fae5;
        color: #065f46;
    }

    .status-dispatched {
        background: #fef3c7;
        color: #92400e;
    }

    .status-delivered {
        background: #d1fae5;
        color: #065f46;
    }

    .status-cancelled {
        background: #fee2e2;
        color: #991b1b;
    }

    .order-items-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 0.75rem;
        overflow: hidden;
        margin-bottom: 1.25rem;
        max-height: calc(100vh - 450px);
        overflow-y: auto;
    }

    .card-header {
        background: var(--bg);
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--border);
        position: sticky;
        top: 0;
        z-index: 1;
    }

    .card-header h3 {
        margin-bottom: 0;
        font-size: 1.15rem;
    }

    .items-list {
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .item-row {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .item-row:last-child {
        border-bottom: none;
    }

    .item-name {
        font-weight: 600;
        color: var(--text);
    }

    .item-qty {
        color: var(--text-light);
        margin-left: 0.5rem;
    }

    .cancel-section {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 0.75rem;
        padding: 1.25rem;
        text-align: center;
    }

    .cancel-btn {
        padding: 0.65rem 1.75rem;
        font-weight: 600;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 1.5rem;
        color: var(--text-light);
        text-decoration: none;
        font-weight: 500;
    }

    .back-link:hover {
        color: var(--primary);
    }

    @@media (max-width: 768px) {
        .order-header {
            padding: 1.5rem;
        }

        .order-meta {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .meta-value {
            font-size: 1rem;
        }

        .status-badge {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
        }

        .card-header {
            padding: 1rem;
        }

        .card-header h3 {
            font-size: 1.1rem;
        }

        .item-row {
            padding: 1rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .cancel-section {
            padding: 1rem;
        }

        .cancel-btn {
            padding: 0.625rem 1.5rem;
            font-size: 0.95rem;
        }
    }
</style>

<a href="/Cart/Index" class="back-link">← Back to Cart</a>

@if(Model.Order != null)
{
    <div class="order-header">
        <h2>Order Details</h2>
        
        <div class="order-meta">
            <div class="meta-item">
                <span class="meta-label">Order ID</span>
                <span class="meta-value">@Model.Order.OrderId.ToString().Substring(0, 8)...</span>
            </div>

            <div class="meta-item">
                <span class="meta-label">Status</span>
                <span class="meta-value">
                    @{
                        var status = (Spc.Client.Services.OrderStatus)Model.Order.Status;
                        var statusClass = status switch {
                            Spc.Client.Services.OrderStatus.PLACED => "status-placed",
                            Spc.Client.Services.OrderStatus.APPROVED => "status-approved",
                            Spc.Client.Services.OrderStatus.DISPATCHED => "status-dispatched",
                            Spc.Client.Services.OrderStatus.DELIVERED => "status-delivered",
                            Spc.Client.Services.OrderStatus.CANCELLED => "status-cancelled",
                            _ => ""
                        };
                    }
                    <span class="status-badge @statusClass">@status</span>
                </span>
            </div>

            <div class="meta-item">
                <span class="meta-label">Total Amount</span>
                <span class="meta-value" style="color: var(--primary);">LKR @Model.Order.TotalAmount.ToString("N2")</span>
            </div>
        </div>
    </div>

    <div class="order-items-card">
        <div class="card-header">
            <h3>Order Items</h3>
        </div>
        <ul class="items-list">
            @foreach(var item in Model.Order.Items)
            {
                <li class="item-row">
                    <span class="item-name">
                        @item.DrugName
                        <span class="item-qty">× @item.Quantity</span>
                    </span>
                    <span class="meta-value">LKR @((item.UnitPrice * item.Quantity).ToString("N2"))</span>
                </li>
            }
        </ul>
    </div>

    @if(Model.Order.Status == 1)
    {
        <div class="cancel-section">
            <p style="margin-bottom: 1rem; color: var(--text-light);">Need to cancel this order?</p>
            <form method="post">
                <input type="hidden" name="orderId" value="@Model.Order.OrderId" />
                <button type="submit" class="btn btn-danger cancel-btn">Cancel Order</button>
            </form>
        </div>
    }
}
else
{
    <div class="alert alert-danger">
        <strong>Order not found</strong><br/>
        The order you're looking for doesn't exist or has been removed.
    </div>
}